/* pages/indexTest/indexTest.wxss */
.rotationContainer, .swiper{
  height: 350rpx;
}
.swiper-item{
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-align-items: center;
  align-items: center;
  align-content: center;
  border-radius: 20rpx;
  flex-shrink: 1;
  opacity: 1;
  justify-content:space-evenly;
}

.current {
  -webkit-transform: scale(1);
  transform: scale(1);
  opacity: 1
}

.wx-swiper-dots {
  position: relative
}

/*水平指示器*/
.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 20rpx
}

/*未选中点的样式*/
.wx-swiper-dot {
  width: 10rpx;
  height: 10rpx;
  background: #FFE4CF !important;
  margin-left: -8rpx
}

/*激活样式*/
.wx-swiper-dot-active {
  width: 28rpx !important;
  height: 10rpx;
  background: linear-gradient(-30deg, #b1c44e 0%, #297245 100%) !important;
  border-radius: 10rpx !important
}

#content {
    border-width: 0rpx;
    position: absolute;
    left: 0rpx;
    top: 375rpx;
    width: 100%;
    height: 100%;
    display: flex;
    font-family: '微软雅黑', sans-serif;
    font-weight: 400;
    font-style: normal;
    text-align: left;
    line-height: 20rpx;
}

#panel {
  display: flex;
  display: -webkit-flex;
  justify-content:space-evenly;
  border-width: 0rpx;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 200rpx;
  background: inherit;
  background-color: rgb(242, 242, 242);
  box-sizing: border-box;
  border-width: 1rpx;
  border-style: solid;
  border-color: rgba(242, 242, 242, 1);
  border-left: 0rpx;
  border-top: 0rpx;
  border-right: 0rpx;
  border-radius: 0rpx;
  border-bottom-right-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;
  box-shadow: none;
  font-family: '微软雅黑', sans-serif;
  font-weight: 400;
  font-style: normal;
  text-align: left;
  line-height: 20rpx;
}

.sport-tab{
